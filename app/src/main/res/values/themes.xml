<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.NeuroTest" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="buttonStyle">@style/Widget.AppCompat.Button</item>
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme.NeuroTest" parent="Base.Theme.NeuroTest" />

    <style name="BasicButtonStyle">
        <item name="android:background">@drawable/basic_button</item>>
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="SmallButtonStyle">
        <item name="android:background">@drawable/small_button</item>
        <item name="android:backgroundTint">@color/green</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ReadyButtonStyle">
        <item name="android:background">@drawable/small_button</item>
        <item name="android:backgroundTint">@color/light_blue</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="IncorrectButtonStyle">
        <item name="android:background">@drawable/small_button</item>
        <item name="android:backgroundTint">@color/red</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>